<ui:FluentWindow x:Class="Enigma.WpfApp.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:Enigma.WpfApp"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:mdi="clr-namespace:MdiWpf;assembly=MdiWpf"
                 mc:Ignorable="d"
                 Height="700" Width="1000"
                 WindowStartupLocation="CenterScreen"
                 d:DataContext="{d:DesignInstance local:MainWindow}">
    <Grid>
        <ContentPresenter x:Name="RootContentDialog" />
        <ui:TitleBar Margin="41 0 0 0"
                     Title="Enigma Wpf App">
            <!-- <ui:TitleBar.Icon> -->
            <!--     <ui:ImageIcon Source="{mdi:IconSource IconName='home-city', Brush=White}" /> -->
            <!-- </ui:TitleBar.Icon> -->
        </ui:TitleBar>
        <ui:NavigationView x:Name="RootNavigation"
                           MenuItemsSource="{Binding ViewModel.NavigationItems}"
                           FooterMenuItemsSource="{Binding ViewModel.FooterNavigationItems}"
                           BreadcrumbBar="{Binding ElementName=BreadcrumbBar}"
                           IsPaneOpen="True"
                           IsPaneToggleVisible="False">
            <ui:NavigationView.Header>
                <ui:BreadcrumbBar x:Name="BreadcrumbBar"
                                  Margin="20 40 20 20"
                                  FontSize="28"
                                  FontWeight="DemiBold" />
            </ui:NavigationView.Header>
        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>
