<controls:NavigationPageBase x:Class="Enigma.WpfApp.Views.Pages.RsaPage"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:local="clr-namespace:Enigma.WpfApp.Views.Pages"
                             xmlns:controls="clr-namespace:Enigma.WpfApp.Controls"
                             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                             mc:Ignorable="d"
                             d:DataContext="{d:DesignInstance local:RsaPage}">
    <DockPanel Margin="10">
        
        <!-- Top buttons -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="0 0 0 40">
            <ui:Button Content="Generate key pair"
                       Appearance="Primary"
                       Icon="{ui:SymbolIcon KeyMultiple20}"
                       Command="{Binding ViewModel.GenerateKeyPairCommand}"/>
            
            <ui:DropDownButton Content="Load"
                               Icon="{ui:SymbolIcon Document24}"
                               Margin="5 0 0 0">
                <ui:DropDownButton.Flyout>
                    <ContextMenu>
                        <MenuItem Header="Public key"
                                  Icon="{ui:SymbolIcon Document24}"/>
                        <MenuItem Header="Private key"
                                  Icon="{ui:SymbolIcon Document24}"/>
                        <MenuItem Header="Encrypted private key"
                                  Icon="{ui:SymbolIcon DocumentLock24}"/>
                    </ContextMenu>
                </ui:DropDownButton.Flyout>
            </ui:DropDownButton>
            
            <ui:DropDownButton Content="Save"
                               Icon="{ui:SymbolIcon Save24}"
                               Margin="5 0 0 0">
                <ui:DropDownButton.Flyout>
                    <ContextMenu>
                        <MenuItem Header="Public key"
                                  Icon="{ui:SymbolIcon Document24}"/>
                        <MenuItem Header="Private key"
                                  Icon="{ui:SymbolIcon Document24}"/>
                        <MenuItem Header="Encrypted private key"
                                  Icon="{ui:SymbolIcon DocumentLock24}"/>
                    </ContextMenu>
                </ui:DropDownButton.Flyout>
            </ui:DropDownButton>
        </StackPanel>
        
        <!-- Main grid -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <!-- Keys textboxes -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <Label Grid.Row="0"
                       Content="Public key:"/>
                <ui:TextBox Grid.Row="1"
                            Height="100"
                            Text="{Binding ViewModel.PublicKey}"
                            FontFamily="Consolas"
                            IsReadOnly="True"/>
                
                <Label Grid.Row="2"
                       Content="Private key:"
                       Margin="0 10 0 0"/>
                <ui:TextBox Grid.Row="3"
                            Height="100"
                            Text="{Binding ViewModel.PrivateKey}"
                            FontFamily="Consolas"
                            IsReadOnly="True"/>
            </Grid>
            
            <!-- Encrypt / Decrypt -->
            <ui:CardExpander Grid.Row="1"
                             Margin="0 20 0 0"
                             Header="Encrypt / Decrypt">
                <controls:InputData />
            </ui:CardExpander>
            
            <!-- Sign / Verify -->
            <ui:CardExpander Grid.Row="2"
                             Margin="0 20 0 0"
                             Header="Sign / Verify"/>
            
        </Grid>
    </DockPanel>
</controls:NavigationPageBase>
