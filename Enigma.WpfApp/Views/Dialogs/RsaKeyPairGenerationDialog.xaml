<UserControl x:Class="Enigma.WpfApp.Views.Dialogs.RsaKeyPairGenerationDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Enigma.WpfApp.Views.Dialogs"
             xmlns:dialogsVm="clr-namespace:Enigma.WpfApp.ViewModels.Dialogs"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance dialogsVm:RsaKeyPairGenerationDialogViewModel}">
    <Grid>
        <StackPanel>
            <Label Content="Key size:" />
            <TextBox Text="{Binding KeySize}" />
            
            <Label Content="Private key password:"
                   Margin="0 20 0 0"/>
            <PasswordBox x:Name="KeyPassword" />
            
            <Label Content="Repeat password:"
                   Margin="0 10 0 0"/>
            <PasswordBox x:Name="KeyPassword2" />
        </StackPanel>
    </Grid>
</UserControl>
